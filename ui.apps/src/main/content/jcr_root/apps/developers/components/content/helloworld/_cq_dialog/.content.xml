<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Properties"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <text
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Text"
                            name="./text"/>
                    <dropdown
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Type of search"
                            name="./dropdown"
                            granite:class="cq-dialog-dropdown-showhide">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                cq-dialog-dropdown-showhide-target=".showhide"/>
                        <items jcr:primaryType="cq:WidgetCollection">
                            <footer-social-media
                                    jcr:primaryType="nt:unstructured"
                                    text="Footer Social Media"
                                    value="footer-social-media"/>
                            <footer-copyright
                                    jcr:primaryType="nt:unstructured"
                                    text="Footer Copyright"
                                    value="footer-copyright"/>
                            <footer-links
                                    jcr:primaryType="nt:unstructured"
                                    text="Footer Links"
                                    value="footer-links"/>
                        </items>
                    </dropdown>
                    <container1
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            granite:class="showhide">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="footer-social-media"/>
                        <items jcr:primaryType="nt:unstructured">
                            <youtubeLink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Container 1"
                                    name="./test1"/>
                        </items>
                    </container1>
                    <container2
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            granite:class="showhide">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="footer-copyright"/>
                        <items jcr:primaryType="nt:unstructured">
                            <youtubeLink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Container 2"
                                    name="./test2"/>
                        </items>
                    </container2>
                    <container3
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            granite:class="showhide">
                        <granite:data
                                jcr:primaryType="nt:unstructured"
                                showhidetargetvalue="footer-links"/>
                        <items jcr:primaryType="nt:unstructured">
                            <youtubeLink
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Container 3"
                                    name="./test3"/>
                        </items>
                    </container3>
                    <multifieldcollection
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            composite="{Boolean}true"
                            fieldDescription="Click + to add a new page"
                            fieldLabel="Multifield collection"
                            name="./multiCol">
                        <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                name="./topics">
                            <items jcr:primaryType="nt:unstructured">
                                <linkurl
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Name of topic that the admin will see in the dialog at drop down optional."
                                        fieldLabel="Topic name"
                                        name="./eventTopicName"/>
                                <multifieldcollection
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Click + to add a new page"
                                        fieldLabel="Multifield collection"
                                        name="./multiCol">
                                    <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./topics">
                                        <items jcr:primaryType="nt:unstructured">
                                            <linkurl
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Name of topic that the admin will see in the dialog at drop down optional."
                                                    fieldLabel="Topic name"
                                                    name="./eventTopicName"/>
                                        </items>
                                    </field>
                                </multifieldcollection>
                            </items>
                        </field>
                    </multifieldcollection>
                </items>
            </column>
        </items>
    </content>
</jcr:root>