<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Page"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <socialmedia
                            jcr:primaryType="nt:unstructured"
                            sling:hideResource="{Boolean}true">
                    </socialmedia>
                    <eventTopic
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Event topics"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            sling:orderBefore="cloudservices">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <section
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Event topics"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <include-client
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                                                    categories="[sap.dev.template.events.validation.icon,sap.dev.validation.max.multifield,sap.dev.template.events.validation.topic]"/>
                                            <topics
                                                    validation="custom-multifield-max-6"
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    composite="{Boolean}true"
                                                    fieldDescription="Click + to add a new item"
                                                    fieldLabel="Multifield collection"
                                                    name="./multiCol">
                                                <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                                        name="./dropdownMultifield/eventTopics">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <inputgroup
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/hyperlink"
                                                                text="Please, check this link to select icon, then enter the icon number at textfield"
                                                                href="https://astronautweb.co/snippet/font-awesome/"
                                                                rel="details"
                                                                target="_blank"/>
                                                        <href
                                                                cq:showOnCreate="{Boolean}true"
                                                                validation="icon-number-field"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Icons for topic"
                                                                emptyText="Icon number some like: \\f000"
                                                                required="{Boolean}true"
                                                                name="./iconNumber"/>
                                                        <topics
                                                                cq:showOnCreate="{Boolean}true"
                                                                validation="event-topic-field"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Name of topic that the admin will see in the dialog at dropdown selector."
                                                                fieldLabel="Topic for event component"
                                                                emptyText="Topic name"
                                                                required="{Boolean}true"
                                                                name="./dropdownTitle"/>
                                                    </items>
                                                </field>
                                            </topics>
                                        </items>
                                    </section>
                                </items>
                            </column>
                        </items>
                    </eventTopic>
                    <eventType
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Event types"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            sling:orderBefore="cloudservices">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <section
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Event topics"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <include-client
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                                                    categories="[sap.dev.template.events.validation.icon,sap.dev.validation.max.multifield]"/>
                                            <topics
                                                    validation="custom-multifield-max-6"
                                                    cq:showOnCreate="{Boolean}true"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    composite="{Boolean}true"
                                                    fieldDescription="Click + to add a new item"
                                                    fieldLabel="Multifield collection"
                                                    name="./multiCol"
                                                    granite:class="multifield-topic-item">
                                                <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                                        name="./dropdownMultifield/eventTypes">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <inputgroup
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/hyperlink"
                                                                text="Please, check this link to select icon, then enter the icon number at textfield"
                                                                href="https://astronautweb.co/snippet/font-awesome/"
                                                                rel="details"
                                                                target="_blank"/>
                                                        <href
                                                                cq:showOnCreate="{Boolean}true"
                                                                validation="icon-number-field"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Icons for types"
                                                                emptyText="Icon number some like: \\f000"
                                                                name="./iconNumber"/>
                                                        <topics
                                                                cq:showOnCreate="{Boolean}true"
                                                                validation="event-type-field"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Name of type that the admin will see in the dialog at dropdown selector."
                                                                fieldLabel="Type for event component"
                                                                emptyText="Type name"
                                                                required="{Boolean}true"
                                                                name="./dropdownTitle"/>
                                                    </items>
                                                </field>
                                            </topics>
                                        </items>
                                    </section>
                                </items>
                            </column>
                        </items>
                    </eventType>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
