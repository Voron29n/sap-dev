<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Column Component Properties"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[sap.dev.template.footer.social.media,sap.dev.validation.max.multifield,sap.dev.template.footer.links]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <social-media
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Social Media"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <footer-social-media-container
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            granite:class="showhide">
                                        <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                showhidetargetvalue="footer-social-media"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <footer-section
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Foolow Us Footer"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <inputgroup
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/text"
                                                            text="Enable user sharing for"/>
                                                    <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <facebook
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <checkbox
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            fieldDescription="Facebook link in footer"
                                                                            name="./socialMedia"
                                                                            value="facebookLink"
                                                                            text="Facebook"
                                                                            granite:class="cq-dialog-checkbox-showhide-facebook">
                                                                        <granite:data
                                                                                jcr:primaryType="nt:unstructured"
                                                                                cq-dialog-checkbox-showhide-facebook-target=".button-facebook-showhide-target"/>
                                                                    </checkbox>
                                                                    <inputLink
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/foundation/container"
                                                                            granite:class="button-facebook-showhide-target">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <facebookLink
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                                    fieldLabel="Link to facebook account"
                                                                                    name="./facebookLink"/>
                                                                        </items>
                                                                    </inputLink>
                                                                </items>
                                                            </facebook>
                                                            <instagram

                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <checkbox
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            fieldDescription="Instagram link in footer"
                                                                            name="./socialMedia"
                                                                            value="instagramLink"
                                                                            text="Instagram"
                                                                            granite:class="cq-dialog-checkbox-showhide-instagram">
                                                                        <granite:data
                                                                                jcr:primaryType="nt:unstructured"
                                                                                cq-dialog-checkbox-showhide-instagram-target=".button-instagram-showhide-target-custom"/>
                                                                    </checkbox>
                                                                    <inputLink
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/foundation/container"
                                                                            granite:class="button-instagram-showhide-target-custom">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <instagramLink
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                                    fieldLabel="Link to instagram account"
                                                                                    name="./instagramLink"/>
                                                                        </items>
                                                                    </inputLink>
                                                                </items>
                                                            </instagram>
                                                            <linkedin
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <checkbox
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            fieldDescription="LinkedIn in footer"
                                                                            name="./socialMedia"
                                                                            value="linkedinLink"
                                                                            text="LinkedIn"
                                                                            granite:class="cq-dialog-checkbox-showhide-linkedin">
                                                                        <granite:data
                                                                                jcr:primaryType="nt:unstructured"
                                                                                cq-dialog-checkbox-showhide-linkedin-target=".button-linkedin-showhide-target"/>
                                                                    </checkbox>
                                                                    <inputLink
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/foundation/container"
                                                                            granite:class="button-linkedin-showhide-target">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <linkedinLink
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                                    fieldLabel="Link to LinkedIn account"
                                                                                    name="./linkedinLink"/>
                                                                        </items>
                                                                    </inputLink>
                                                                </items>
                                                            </linkedin>
                                                            <twitter
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <checkbox
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            fieldDescription="Twitter in footer"
                                                                            name="./socialMedia"
                                                                            value="twitterLink"
                                                                            text="Twitter"
                                                                            granite:class="cq-dialog-checkbox-showhide-twitter">
                                                                        <granite:data
                                                                                jcr:primaryType="nt:unstructured"
                                                                                cq-dialog-checkbox-showhide-twitter-target=".button-twitter-showhide-target"/>
                                                                    </checkbox>
                                                                    <inputLink
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/foundation/container"
                                                                            granite:class="button-twitter-showhide-target">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <twitterLink
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                                    fieldLabel="Link to twitter account"
                                                                                    name="./twitterLink"/>
                                                                        </items>
                                                                    </inputLink>
                                                                </items>
                                                            </twitter>
                                                            <youtube
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <checkbox
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            fieldDescription="YouTube in footer"
                                                                            name="./socialMedia"
                                                                            value="youtubeLink"
                                                                            text="YouTube"
                                                                            granite:class="cq-dialog-checkbox-showhide-youtube">
                                                                        <granite:data
                                                                                jcr:primaryType="nt:unstructured"
                                                                                cq-dialog-checkbox-showhide-youtube-target=".button-youtube-showhide-target"/>
                                                                    </checkbox>
                                                                    <inputLink
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/foundation/container"
                                                                            granite:class="button-youtube-showhide-target">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <youtubeLink
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                                    fieldLabel="Link to youtube account"
                                                                                    name="./youtubeLink"/>
                                                                        </items>
                                                                    </inputLink>
                                                                </items>
                                                            </youtube>
                                                            <github
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <checkbox
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            fieldDescription="GitHub in footer"
                                                                            name="./socialMedia"
                                                                            value="githubLink"
                                                                            text="GitHub"
                                                                            showhidetargetvalue="true"
                                                                            granite:class="cq-dialog-checkbox-showhide-github">
                                                                        <granite:data
                                                                                jcr:primaryType="nt:unstructured"
                                                                                cq-dialog-checkbox-showhide-github-target=".button-github-showhide-target"/>
                                                                    </checkbox>
                                                                    <inputLink
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/foundation/container"
                                                                            granite:class="button-github-showhide-target">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <githubLink
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                                    fieldLabel="Link to GitHub account"
                                                                                    name="./githubLink"/>
                                                                        </items>
                                                                    </inputLink>
                                                                </items>
                                                            </github>
                                                        </items>
                                                    </field>
                                                </items>
                                            </footer-section>
                                        </items>
                                    </footer-social-media-container>
                                </items>
                            </columns>
                        </items>
                    </social-media>
                    <copyright
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Copyright"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <footer-copyright-container
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            granite:class="showhide">
                                        <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                showhidetargetvalue="footer-copyright"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <footer-section
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Footer Copyright Links"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <multifieldcollection
                                                            validation="custom-multifield-max-8"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            composite="{Boolean}true"
                                                            fieldDescription="Click + to add a new copyright link"
                                                            fieldLabel="Multifield collection"
                                                            name="./multiCol">
                                                        <field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                name="./copyrightLinks">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <linktitle
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldDescription="Name of copyright link that users will see on the footer."
                                                                        fieldLabel="Title of a link"
                                                                        name="./linkTitle"/>
                                                                <linkurl
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldDescription="URL of copyright link."
                                                                        fieldLabel="URL of a link"
                                                                        name="./linkURL"/>
                                                            </items>
                                                        </field>
                                                    </multifieldcollection>
                                                </items>
                                            </footer-section>
                                        </items>
                                    </footer-copyright-container>
                                </items>
                            </columns>
                        </items>
                    </copyright>
                    <footer-links
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Copyright"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <footer-links-container
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            granite:class="showhide">
                                        <granite:data
                                                jcr:primaryType="nt:unstructured"
                                                showhidetargetvalue="footer-links"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <footer-section
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Footer Links"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <multifieldcollection
                                                            validation="footer-multifield-topic-max-4"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            composite="{Boolean}true"
                                                            fieldDescription="Click + to add a new copyright link"
                                                            fieldLabel="Multifield collection"
                                                            name="./multiCol">
                                                        <field
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                name="./footerLinks">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <linktitle
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldDescription="Name of topic that the admin will see in the dialog at drop down optional."
                                                                        fieldLabel="Title of topic"
                                                                        name="./topicTitle"/>
                                                                <multifieldcollection
                                                                        validation="custom-multifield-max-8"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                        composite="{Boolean}true"
                                                                        fieldDescription="Click + to add a new copyright link"
                                                                        fieldLabel="Multifield collection"
                                                                        name="./multiCol">
                                                                    <field
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                            name="./.">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <linktitle
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                    fieldDescription="Name of topic that the admin will see in the dialog at drop down optional."
                                                                                    fieldLabel="Title of a link"
                                                                                    name="./linkTitle"/>
                                                                            <linkurl
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                    fieldDescription="Name of topic that the admin will see in the dialog at drop down optional."
                                                                                    fieldLabel="URL of a link"
                                                                                    name="./linkURL"/>
                                                                        </items>
                                                                    </field>
                                                                </multifieldcollection>
                                                            </items>
                                                        </field>
                                                    </multifieldcollection>
                                                </items>
                                            </footer-section>
                                        </items>
                                    </footer-links-container>
                                </items>
                            </columns>
                        </items>
                    </footer-links>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
